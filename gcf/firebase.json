{
  "firebase": "<YOUR_APP_ID>",
  "rules": "security-rules.json",
  "public": "./",
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**",
    "functions"
  ],
  "functions": {
    // Directory must contain a function.js file that exports the Google Cloud Functions
    ".source": "functions",
    ".credentials": "secrets.json",
    // Must match a module export in your Node.js code
    "makeuppercase": {
      "triggers": {
        "database": {
          "path": "/messages/$message",
          "condition": "newData.child('message').val() != newData.child('message').val().toUpperCase()"
        }
      }
    }
  }
}
