{
  "firebase": "<APP_ID>",
  "public": "./",
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**",
    "functions"
  ],
  // [START trigger_rules]
  "rules": "security-rules.json", // Must be present as online rules will be overriden when using functions
  "functions": {
    ".source": "functions", // Directory must contain an index.js file that exports the Google Cloud Functions
    "makeuppercase": { // Must match a module export in your Node.js code
      "triggers": {
        "database": {
          "path": "/messages/$message", // Path of database objects that trigger the function
          "condition": "!data.exists()" // Only run once on new messages only
        }
      }
    }
  }
  // [END trigger_rules]
}
